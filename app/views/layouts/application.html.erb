<!DOCTYPE html>
<html>
	<head>
		<title>Joan's System</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if !current_user.nil? %>
			<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
			<%= yield %>
		<% else %>

			<div class="container" style="margin-top: 0px; width: 100%;">
				<div class="loginmodal-container">
					<h1>Joan's Printing Press</h1><br>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<%= f.text_field :login, placeholder: "Username", autofocus: true %>
						<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
						<%= f.submit "Log in", class: "login loginmodal-submit" %>
					<% end %>

					<% flash.each do |name, msg| %>
						<% if name == "alert" %>
							<center style="margin-top: 5px; color: red;"><%= msg %></center>
						<% elsif name == "notice" %>
							<center style="margin-top: 5px; color: green;"><%= msg %></center>
						<%end%>
						
					<% end %>
					
				</div>
			</div>

		<% end %>
	</body>
</html>