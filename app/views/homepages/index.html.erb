<% content_for :set_active_customers, "active" %>
<% content_for :assets_css do %>
	<%= stylesheet_link_tag    'ie10-viewport-bug-workaround', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'navbar-fixed-top', media: 'all', 'data-turbolinks-track' => true %>
<% end %>
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-5 col-lg-6" style="margin-bottom: 5px;">
		<input type="text" style="border-radius: 5px; border: solid 1.5px #dedede; padding: 6px;" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" placeholder="Search Customer/Trade Name">
	</div>
	<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4" style="margin-bottom: 5px;">
		<!-- <input class="" placeholder="Search Customer/Trade Name"> -->
		<select type="text" style="border-radius: 5px; border: solid 1.5px #dedede; padding: 6px;" class="form-control col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<option selected disabled>Sort table by: id (default)</option>
			<% @column_to_show.each do |column| %>
				<option><%= column.option_name %></option>
			<% end %>
		</select>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-3 col-lg-2" style="margin-bottom: 5px;">
		<button class="btn btn-success btn-block">Add Customer</button>
	</div>
</div>

<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<div class="table-responsive">          
			<table class="table table-striped table-bordered">
				<thead>
					<tr class="success">
						<% @column_to_show.each do |column| %>
							<th><%= column.option_name %></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
						<tr>
							<% @to_search.each do |to_display| %>
								<th><%= customer[to_display] %></th>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
