<% content_for :set_active_settings, "active" %>
<% content_for :assets_css do %>
	<%= stylesheet_link_tag    'ie10-viewport-bug-workaround', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'navbar-fixed-top', media: 'all', 'data-turbolinks-track' => true %>
<% end %>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
		<div class="container-fluid">
			<div class="jumbotron">
				<h3 align="center" style="margin-top: -20px;">Show Columns</h3><br>
				<div class="container-fluid">
					<%= form_for(SettingOption.new, as: :settings, url: update_settings_path) do |f| %>
						<div class="row">
							<div class="col-md-12">
								<% @settings.each do |setting| %>
									<%= "<div class='col-lg-3 col-md-3 col-sm-12 col-xm-12' >".html_safe if(@temp_count == 1 || @temp_count == 6 || @temp_count == 11 || @temp_count == 16) %>
									<input type="checkbox" name="settings[options][]" value="<%= setting.option_name %>" <%= setting.is_showed ? "checked" : nil %> id="<%= setting.option_name %>">&nbsp;
									<label for="<%= setting.option_name %>" style="font-size: 16px;"><%= setting.option_name %></label><br>
									<%= "</div>".html_safe if(@temp_count == 5 || @temp_count == 10 || @temp_count == 15 || @temp_count == 19) %>
									<% @temp_count += 1 %>
								<% end %>
							</div>
							<div class="col-xm-12 col-sm-12 col-md-12 col-lg-12" style="margin-top: 40px;">
								<center> <%= f.submit "Save Changes", class: "btn btn-danger" %> </center>
							</div>
						</div>
					<% end %>
				</div>
				
			</div>
		</div>
	</div>
</div>